    <%= text_field_tag 'search_term', nil, placeholder: "~*~search here~*~"%>
    <%= submit_tag 'Search' %>
  <% end %>

  <div id="response">

  </div>
</div>

<div class="wave">
  <svg xmlns="http://www.w3.org/2000/svg"
     width="80px" height="60px"
     viewBox="5 0 80 60">
    <path id="wave"
        fill="none"
        stroke="#262626"
        stroke-width="4"
        stroke-linecap="round">
    </path>
  </svg>
</div>

<script>
const path = document.querySelector('#wave');
const animation = document.querySelector('#moveTheWave');
const m = 0.512286623256592433;

function buildWave(w, h) {

const a = h / 4;
const y = h / 2;

const pathData = [
  'M', w * 0, y + a / 2,
  'c',
    a * m, 0,
    -(1 - a) * m, -a,
    a, -a,
  's',
    -(1 - a) * m, a,
    a, a,
  's',
    -(1 - a) * m, -a,
    a, -a,
  's',
    -(1 - a) * m, a,
    a, a,
  's',
    -(1 - a) * m, -a,
    a, -a,

  's',
    -(1 - a) * m, a,
    a, a,
  's',
    -(1 - a) * m, -a,
    a, -a,
  's',
    -(1 - a) * m, a,
    a, a,
  's',
    -(1 - a) * m, -a,
    a, -a,
  's',
    -(1 - a) * m, a,
    a, a,
  's',
    -(1 - a) * m, -a,
    a, -a,
  's',
    -(1 - a) * m, a,
    a, a,
  's',
    -(1 - a) * m, -a,
    a, -a,
  's',
    -(1 - a) * m, a,
    a, a,
  's',
    -(1 - a) * m, -a,
    a, -a
].join(' ');

path.setAttribute('d', pathData);
}

buildWave(90, 60);
</script>
